Algoritmo "retangulo"

Var
   baseRetangulo, alturaRetangulo, area, perimetro, diagonal: real

Inicio

      escreval("Base do retangulo: ")
      leia(baseRetangulo)
      escreval("Altura do retangulo: ")
      leia(alturaRetangulo)


      area <- baseRetangulo * alturaRetangulo
      perimetro <- baseRetangulo * 2 + alturaRetangulo * 2
      diagonal <- RaizQ(Exp(baseRetangulo, 2) + Exp(alturaRetangulo, 2))






      escreval("AREA = ",area:2:4)
      escreval("PERIMETRO = ",perimetro:2:4)
      escreval("DIAGONAL = ", diagonal:2:4)



Fimalgoritmo
